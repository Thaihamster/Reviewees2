<div class="post-show">
  <% if @post.picture? %>
    <%= image_tag @post.picture.url, class: "img-responsive center-block show-img" %>
  <% else %>
    <img class="img-responsive center-block show-img" src="/image.png">
  <% end %>
  <div class="display-type">
    <h3 class="col-lg-4 post-name"><%= @post.name %></h3>
    <h3 class="col-lg-5">
      <div class="star-rating" data-score= <%= @avg_review %> ></div>
    </h3>
    <h3 id="like" class="col-lg-1">
      <% if logged_in? %>
        <% if @post.liked_by?(current_user) %>
          <%= link_to post_like_path(@post, @post.likes.find_by(user_id: current_user.id)),
                                     method: :delete, id: "like", remote: true do %>
            <div class="likes-icon">
              <i class="fas fa-heart heart-on fa-lg"></i>
            </div>
          <% end %>
        <% else %>
          <%= link_to post_likes_path(post), method: :post, id: "like", remote: true do %>
            <div class="likes-icon">
              <i class="far fa-heart heart-off fa-lg"></i>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to login_path do %>
          <div class="likes-icon">
            <i class="fas.fa-heart"></i>
          </div>>
        <% end %>
      <% end %>
    </h3>
  </div>
  <div class="row">
    <h5 class="col-lg-4 col-lg-offset-1">カテゴリー</h5>
  </div>
  <h4 class="center"><%= @post.content %></h4>
</div>
<!-- 削除・編集ボタン -->
<div class="row">
  <h4 class="center">
    <% if current_user.id == @post.user_id || current_user.admin? %>
      <%= link_to "編集する", edit_post_path, class: "btn btn-edit" %>
      <%= link_to "削除する", post_path, method: :delete,
                                    data: { confirm: "この投稿を削除します。本当によろしいですか？" },
                                    class: "btn btn-delete" %>
    <% end %>
  </h4>
</div>
