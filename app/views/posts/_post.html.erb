<div class="col-lg-4">
  <div class="card">
    <div class="underline-image">
      <% if post.picture? %>
        <%= image_tag post.picture.url, class: "card-img-top"%>
      <% else %>
        <img class="card-img-top" src="/image.png">
      <% end %>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= link_to post.name, post_path(post) %></h4>
      <h5 class="card-text">カテゴリー</h5>
    </div>
    <div class="row">
      <!-- いつの日かリファクタリングする -->
      <% reviews = Review.where(post_id: post.id) %>
      <% avg_review = reviews.average(:rating) %>
      <div class="rating-user-show">
        <div class="star-rating-read" data-score= <%= avg_review %> ></div>
      </div>
      <div class="user-likes">
        <i class="fas fa-heart heart-on fa-lg"></i>
        <%= post.likes.count %>
      </div>
      <div class="user-reviews-count">
        <i class="fas fa-comment-dots fa-lg"></i>
        <%= post.reviews.count %>
      </div>
    </div>
    <h5 class="text-muted card-text"><%= post.created_at.strftime('%Y/%m/%d') %></h5>
  </div>
</div>
