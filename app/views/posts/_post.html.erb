<div class="card">
  <div class="underline-image">
    <% if post.picture? %>
      <%= image_tag post.picture.url, class: "card-img-top"%>
    <% else %>
      <img class="card-img-top" src="/image.png">
    <% end %>
  </div>
  <div class="card-body">
    <h4 class="card-title"><%= link_to post.name, post_path(post) %></h4>
    <h5 class="card-text">カテゴリー</h5>
    <!-- いつの日かリファクタリングする -->
    <% reviews = Review.where(post_id: post.id) %>
    <% avg_review = reviews.average(:rating) %>
    <div class="star-rating center" data-score= <%= avg_review %> ></div>
    <h5 class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></h5>
  </div>
</div>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
