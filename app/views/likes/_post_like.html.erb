  <% if logged_in? %>
  <% if @post.liked_by?(current_user) %>
    <%= link_to post_like_path(@post, @post.likes.find_by(user_id: current_user.id)),
                               method: :delete, id: "like", remote: true do %>
      <i class="fas fa-heart heart-on fa-lg"></i>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(@post), method: :post, id: "like", remote: true do %>
      <i class="far fa-heart heart-off fa-lg"></i>
    <% end %>
  <% end %>
<% else %>
  <%= link_to login_path do %>
    <i class="fas fa-heart heart-on fa-lg"></i>
  <% end %>
<% end %>
