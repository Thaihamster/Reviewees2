<% provide(:title, 'ホーム') %>
<div class="center jumbotron jumbotron-extend">
  <div class="container-fluid jumbotron-container">
    <h1>REVIEWEEES</h1>
    <h4 class="site-description">お気に入りの日用品をシェア&レビューしよう！</h4>
    <% if logged_in? %>
      <%= link_to "投稿する", new_post_path, class: "btn btn-lg btn-primary-home" %>
    <% else %>
      <%= link_to "はじめる", login_path, class: "btn btn-lg btn-primary-home" %>
    <% end %>
  </div>
</div>
<%= render 'layouts/search' %>
<%= render 'layouts/popular' %>
<%= render 'layouts/latest' %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
